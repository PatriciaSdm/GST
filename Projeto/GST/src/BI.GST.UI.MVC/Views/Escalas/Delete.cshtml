@model BI.GST.Application.ViewModels.EscalaViewModel


@{
    ViewBag.Title = "Delete";
}

<h2>Deletar @Html.DisplayNameFor(model => model.Nome) ?</h2>

<h3>Tem certea que deseja deletar?</h3>
<div>
    <h4>Escala</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.HoraAlmoco)
        </dt>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para lista", "Index")
        </div>
    }
</div>
