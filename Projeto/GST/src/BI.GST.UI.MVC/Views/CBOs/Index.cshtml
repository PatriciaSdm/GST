@model IEnumerable<BI.GST.Application.ViewModels.CBOViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Classificação Brasileira de Ocupações</h2>

<p>
    @Html.ActionLink("Adicionar CBO", "Create")
</p>


@using (Html.BeginForm("Index", "CBOs", new { pesquisa = "" }, FormMethod.Get))
{
    <p>
        Pesquisar Por nome: @Html.Editor("pesquisa") <input type="submit" value="Pesquisar" class="btn btn-default" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoCBO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoCBO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CBOId }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.CBOId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.CBOId })
        </td>
    </tr>
}

</table>

@Html.Partial("_Paginacao")
@Html.Partial("_Mensagem")
