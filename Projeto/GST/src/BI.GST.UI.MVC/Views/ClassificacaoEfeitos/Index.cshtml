@model IEnumerable<BI.GST.Application.ViewModels.ClassificacaoEfeitoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Classificações Efeitos", new { pesquisa = "" }, FormMethod.Get))
{
    <p>
        Pesquisar Por nome: @Html.Editor("pesquisa") <input type="submit" value="Pesquisar" class="btn btn-default" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Classificacao)
        </th>
       <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Classificacao)
        </td>
       <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClassificacaoEfeitoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ClassificacaoEfeitoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClassificacaoEfeitoId })
        </td>
    </tr>
}

@Html.Partial("_Paginacao")
