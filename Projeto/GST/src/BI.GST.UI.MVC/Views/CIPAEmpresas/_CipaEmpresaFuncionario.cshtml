@model BI.GST.Application.ViewModels.CIPAEmpresaFuncionarioViewModel

@using (Html.BeginCollectionItem("CIPAEmpresaFuncionarioViewModel"))
{
    @Html.HiddenFor(model => model.CIPAEmpresaFuncionarioId)
    @Html.HiddenFor(model => model.CipaEmpresaId)


    <div class="form-group">
        @Html.Label("Efetivo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ListBox("FuncionariosEfetivos", (MultiSelectList)ViewBag.FuncionariosEfetivos, htmlAttributes: new { @class = "form-control", size = "6" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Suplentes", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ListBox("FuncionariosSuplentes", (MultiSelectList)ViewBag.FuncionariosSuplentes, htmlAttributes: new { @class = "form-control", size = "6" })
        </div>
    </div>
}


